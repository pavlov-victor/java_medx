<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nire.medx">

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MedX">
        <activity
            android:name=".diary.edit.EditEntryActivity"
            android:parentActivityName=".diary.list.MainActivity"
            android:exported="true" />
        <activity
            android:name=".diary.edit.PulseMeterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".diary.edit.CreateEntryActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".diary.list.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>